@using KATQ_TEAM.Models
@model Sanpham

@{
    ViewBag.Title = "xemchitiet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<div class="container">
    <div class="text-center">
        <h2 class="my-4">CHI TIẾT SẢN PHẨM</h2>
        <div class="product-detail">
            <img src="@Url.Content("~" + @Model.Anhbia)" class="img-fluid rounded mb-4" alt="@Model.Tensp" />
            <h3 class="mb-3">@Model.Tensp</h3>
            <h3 class="text-danger">Giá: @String.Format("{0:0,0}", @Model.Giatien) VND</h3>
            <p class="mt-3">@Model.Mota</p>
            @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = Model.Masp, @strURL = Request.Url.ToString() }))
            {
                <button type="submit" class="btn btn-primary btn-lg mt-4">Mua hàng</button>
            }
        </div>
    </div>
</div>
<hr />

<div class="all-products">
    <h2 class="my-4 text-center">TẤT CẢ SẢN PHẨM</h2>
    <div class="row">
       @{ Html.RenderAction("dtAllpartial", "Sanpham");}
    </div>
</div>

<style>
    .product-detail img {
        transition: transform 0.3s ease-in-out;
    }

       

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease-in-out;
    }

      

    .product-detail h3 {
        transition: color 0.3s ease-in-out;
    }


    .all-products .product-item {
        margin-bottom: 20px;
    }
</style>
