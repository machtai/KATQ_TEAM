@model KATQ_TEAM.Models.DonHang
@{
    ViewBag.Title = "ThanhToanDonHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Trang thanh toán</h2>

@using (Html.BeginForm("ProcessThanhToanDonHang", "GioHang", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <table class="table">
        <tbody>
            <tr>
                <th scope="row">Ngày đặt</th>
                <td>@Html.TextBox("Ngaydat", DateTime.Now.ToString("dd/MM/yyyy"), new { @class = "form-control", @readonly = "readonly" })</td>
            </tr>
            <tr>
                <th scope="row">Tổng tiền thanh toán</th>
                <td><h3 class="text-success">@String.Format("{0:0,0}", @ViewBag.tongtien) USD</h3></td>
            </tr>
            <tr>
                <th scope="row">Địa chỉ nhận hàng</th>
                <td>
                    @Html.EditorFor(model => model.Diachinhanhang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Diachinhanhang, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <th scope="row">Phương thức thanh toán</th>
                <td>
                    <div class="btn-group" role="group" aria-label="Payment Method">
                        <button type="submit" name="paymentMethod" value="PayPal" class="btn btn-success">PayPal</button>
                        <button type="submit" name="paymentMethod" value="COD" class="btn btn-success">COD</button>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
}

<style>
    .table th {
        width: 30%;
    }

    .table td {
        width: 70%;
    }
</style>
