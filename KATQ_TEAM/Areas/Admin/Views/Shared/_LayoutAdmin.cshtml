
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashboard - SB Admin</title>
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Areas/Assets/dist/css/styles.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>

    <style type="text/css">
        .menu1 {
            padding-left: 20px;
        }
    </style>
</head>
<body class="sb-nav-fixed">
    @{ var u = Session["use"] as KATQ_TEAM.Models.Nguoidung; }

    <nav class="sb-topnav navbar navbar-expand navbar-dark" style="background-color:dodgerblue">

        <div style="color:white;margin-left:20px">
            <a style="color:white" type="button" href="@Url.Action("Index", "Home")" class="btn btn-light text-secondary menu1">
                <i class="fa fa-home"></i> KATQ_TEAM
            </a>
        </div>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
        </form>

        <!-- Navbar-->
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" style="color:red" href="@Url.Action("Details", "Nguoidungs", new { id = u.MaNguoiDung  })"> Xin chào : @u.Email</a>

                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/User/DangXuat"> ĐĂNG XUẤT</a>
                </div>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav" style="margin: 20px">
                        <div class="nav-item">
                            @Html.ActionLink("Người dùng", "Index", "Nguoidungs", null, new { @class = "nav-link text-white" })
                        </div>
                        <hr class="my-2"> <!-- Phân biệt từng phần -->
                        <div class="nav-item">
                            @Html.ActionLink("Đơn hàng", "Index", "DonHangs", null, new { @class = "nav-link text-white" })
                        </div>
                        <hr class="my-2"> <!-- Phân biệt từng phần --> <div class="nav-item">
                            @Html.ActionLink("Sản phẩm", "Index", "Home", null, new { @class = "nav-link text-white" })
                        </div>
                        <hr class="my-2"> <!-- Phân biệt từng phần -->

                        <div class="nav-item">
                            @Html.ActionLink("Hãng sản xuất", "Index", "Hangsanxuats", null, new { @class = "nav-link text-white" })
                        </div>
                        <hr class="my-2"> <!-- Phân biệt từng phần -->

                        <div class="nav-item">
                            @Html.ActionLink("Hệ điều hành", "Index", "Hedieuhanhs", null, new { @class = "nav-link text-white" })
                        </div>
                        <hr class="my-2"> <!-- Phân biệt từng phần -->
                        <div class="nav-item">
                            @Html.ActionLink("Thống kê", "Index", "Thongkes", null, new { @class = "nav-link text-white" })
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid mt-3">
                    @RenderBody()
                </div>
            </main>

        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Areas/Assets/dist/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/Areas/Assets/dist/assets/demo/chart-area-demo.js"></script>
    <script src="~/Areas/Assets/dist/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="~/Areas/Assets/dist/assets/demo/datatables-demo.js"></script>
</body>
</html>
